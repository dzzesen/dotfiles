[
  {
    "bindings": {
      "ctrl-q": "workspace::CloseAllDocks",
      "ctrl-g n": "project_panel::ToggleFocus",
      "ctrl-g a": "agent::ToggleFocus",
      "ctrl-g c": "git_panel::ToggleFocus",
      "ctrl-g o": "outline_panel::ToggleFocus",
      "ctrl-g l": [
        "task::Spawn",
        { "task_name": "start lazygit", "reveal_target": "center" }
      ]
    }
  },
  {
    "context": "Editor || Terminal || EmptyPane",
    "bindings": {
      "ctrl-h": "pane::ActivatePreviousItem",
      "ctrl-l": "pane::ActivateNextItem",
      "ctrl-w": "pane::CloseActiveItem",
      "ctrl-u": "pane::ReopenClosedItem",
      "ctrl-p": "pane::TogglePinTab",
      "ctrl-o": "file_finder::Toggle",
      "ctrl-t": "workspace::NewFile",
      "ctrl-n": null
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-o": "file_finder::Toggle",
      "ctrl-t": "workspace::NewFile"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-shift-space": null,
      "ctrl-;": "editor::ShowWordCompletions"
    }
  },
  {
    "context": "Editor && !edit_prediction",
    "bindings": {
      "ctrl-tab": "editor::ShowEditPrediction"
    }
  },
  {
    "context": "Editor && edit_prediction",
    "bindings": {
      "alt-tab": null,
      "alt-l": null,
      "alt-right": null,
      "ctrl-tab": "editor::AcceptEditPrediction"
    }
  },
  {
    "context": "Editor && edit_prediction_conflict",
    "bindings": {
      "alt-l": null,
      "ctrl-tab": "editor::AcceptEditPrediction"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-j": "menu::SelectNext",
      "ctrl-k": "menu::SelectPrevious",
      "ctrl-l": "menu::Confirm"
    }
  },
  {
    "context": "VimControl && !menu",
    "bindings": {
      "shift-h": "vim::StartOfLine",
      "shift-l": "vim::EndOfLine",
      "g d": "editor::GoToDefinition",
      "ctrl-j": "pane::GoBack",
      "ctrl-k": "pane::GoForward"
    }
  },
  {
    "context": "Editor && (showing_code_actions || showing_completions)",
    "bindings": {
      "ctrl-j": "editor::ContextMenuNext",
      "ctrl-k": "editor::ContextMenuPrevious",
      "ctrl-l": "editor::ConfirmCompletion"
    }
  },
  {
    "context": "Editor && !agent_diff",
    "bindings": {
      "ctrl-s": "git::ToggleStaged",
      "ctrl-r": "git::Restore"
    }
  }
]
