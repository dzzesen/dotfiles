{
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "features": {
    "edit_prediction_provider": null
  },
  "edit_predictions": {
    "disabled_globs": [],
    "mode": "subtle",
    "enabled_in_text_threads": false
  },
  "show_edit_predictions": false,
  "agent": {
    "default_profile": "minimal",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4-thinking"
    }
  },
  "collaboration_panel": {
    "dock": "right"
  },
  "outline_panel": {
    "dock": "right"
  },
  "git_panel": {
    "dock": "right"
  },
  "project_panel": {
    "button": false,
    "dock": "right",
    "default_width": 500,
    "entry_spacing": "standard",
    "git_status": true,
    "auto_fold_dirs": false
  },
  "icon_theme": "Catppuccin Macchiato",
  "vim_mode": true,
  "ui_font_size": 20,
  "ui_font_weight": 600,
  "buffer_font_family": "Hack Nerd Font",
  "buffer_font_size": 18,
  "buffer_font_weight": 600,
  "theme": {
    "mode": "system",
    "light": "Catppuccin Macchiato",
    "dark": "Catppuccin Macchiato"
  },
  "vertical_scroll_margin": 100,
  "minimap": {
    "show": "always",
    "thumb": "always",
    "thumb_border": "none",
    "current_line_highlight": "line"
  },
  "languages": {
    "Python": {
      "show_edit_predictions": false,
      "language_servers": ["pyright", "ruff"],
      "formatter": [
        {
          "code_actions": {
            "source.fixAll.ruff": true,
            "source.organizeImports.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    },
    "Rust": {
      "language_servers": ["rust-analyzer"]
    },
    "JSONC": {
      "prettier": {
        "allowed": true,
        "trailingComma": "none"
      }
    }
  },
  "lsp": {
    "ruff": {
      "initialization_options": {
        "settings": {
          "lineLength": 88,
          "lint": {
            "extendSelect": ["I"]
          }
        }
      }
    },
    "pyright": {
      "settings": {
        "python.analysis": {
          "typeCheckingMode": "off"
        },
        "python": {
          "pythonPath": ".venv/bin/python"
        }
      }
    },
    "rust-analyzer": {
      "initialization_options": {
        "inlayHints": {
          "rust": {
            "analyzerTargetDir": true
          }
        }
      }
    }
  }
}
