// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "completions": {
    "words_min_length": 2
  },
  "show_completions_on_input": true,
  "show_edit_predictions": true,
  "edit_predictions": {
    "provider": "zed",
    "enabled_in_text_threads": true,
    "mode": "subtle",
  },
  "languages": {
    "HTML": {
      "tab_size": 2,
    },
  },
  "vim": {
    "use_smartcase_find": true,
    "toggle_relative_line_numbers": false,
  },
  "toolbar": {
    "code_actions": false,
    "agent_review": false,
    "selections_menu": false,
    "breadcrumbs": true,
  },
  "minimap": {
    "max_width_columns": 100,
    "thumb_border": "none",
    "thumb": "always",
    "show": "always",
  },
  "scrollbar": {
    "cursors": false,
    "show": "always",
  },
  "inline_code_actions": false,
  "relative_line_numbers": "disabled",
  "gutter": {
    "min_line_number_digits": 4,
    "folds": false,
    "breakpoints": false,
    "runnables": false,
    "line_numbers": false,
  },
  "drag_and_drop_selection": {
    "enabled": false,
  },
  "hover_popover_delay": 0,
  "auto_signature_help": false,
  "fast_scroll_sensitivity": 5.0,
  "scroll_sensitivity": 3.0,
  "vertical_scroll_margin": 25.0,
  "scroll_beyond_last_line": "vertical_scroll_margin",
  "excerpt_context_lines": 5,
  "expand_excerpt_lines": 10,
  "which_key": {
    "delay_ms": 500,
    "enabled": true,
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 2000,
    },
  },
  "helix_mode": false,
  "show_wrap_guides": true,
  "minimum_contrast_for_highlights": 40.0,
  "rounded_selection": false,
  "selection_highlight": false,
  "current_line_highlight": "line",
  "hide_mouse": "never",
  "cursor_blink": false,
  "multi_cursor_modifier": "cmd_or_ctrl",
  "auto_update": true,
  "on_last_window_closed": "quit_app",
  "when_closing_with_no_tabs": "keep_window_open",
  "collaboration_panel": {
    "button": false,
  },
  "notification_panel": {
    "dock": "right",
  },
  "git_panel": {
    "dock": "right",
    "button": true,
  },
  "outline_panel": {
    "indent_guides": {
      "show": "never",
    },
    "indent_size": 30.0,
    "auto_reveal_entries": false,
    "dock": "right",
  },
  "project_panel": {
    "indent_guides": {
      "show": "never",
    },
    "starts_open": false,
    "indent_size": 30.0,
    "folder_icons": false,
    "entry_spacing": "standard",
    "dock": "right",
  },
  "active_pane_modifiers": {},
  "window_decorations": "client",
  "use_system_window_tabs": false,
  "centered_layout": {
    "left_padding": null,
  },
  "bottom_dock_layout": "contained",
  "preview_tabs": {},
  "tabs": {
    "activate_on_close": "history",
  },
  "tab_bar": {
    "show_tab_bar_buttons": true,
    "show": false,
  },
  "title_bar": {
    "show_menus": false,
    "show_user_menu": true,
    "show_sign_in": true,
    "show_project_items": true,
    "show_branch_icon": false,
  },
  "debugger": {
    "button": false,
  },
  "search": {
    "button": false,
  },
  "terminal": {
    "button": false,
  },
  "ui_font_weight": 400.0,
  "ui_font_family": ".ZedSans",
  "buffer_line_height": "standard",
  "buffer_font_family": "Myna",
  "format_on_save": "off",
  "base_keymap": "VSCode",
  "agent": {
    "default_profile": "write",
    "inline_assistant_model": {
      "provider": "ollama",
      "model": "qwen3-coder:480b-cloud",
    },
    "default_model": {
      "provider": "ollama",
      "model": "qwen3-coder:480b-cloud",
    },
    "favorite_models": [],
    "model_parameters": [],
  },
  "icon_theme": "Catppuccin Mocha",
  "vim_mode": true,
  "ui_font_size": 24.0,
  "buffer_font_size": 20.0,
  "theme": {
    "mode": "dark",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Macchiato",
  },
}
